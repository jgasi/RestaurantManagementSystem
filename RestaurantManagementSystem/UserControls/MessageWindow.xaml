<Window x:Class="RestaurantManagementSystem.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Poruka" Height="250" Width="550"
        WindowStartupLocation="Manual" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent">
    <Border CornerRadius="10" Background="White" BorderBrush="Black" BorderThickness="1">
        <StackPanel Margin="10">
            <TextBlock x:Name="tbMessage" TextWrapping="Wrap" FontSize="14" Foreground="Black" />
            <Button Content="U redu" Click="Button_Click" Style="{StaticResource btnDoKomentara}" Width="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>
