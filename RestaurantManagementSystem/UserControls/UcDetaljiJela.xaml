<UserControl x:Class="RestaurantManagementSystem.UserControls.UcDetaljiJela"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="glavniGrid">
        <StackPanel Margin="10">

            <RadioButton Style="{StaticResource menuButton}"
                         Tag="{StaticResource color11}"
                         Click="Povratak_Click"
                         Margin="5,5,5,30">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="ArrowCircleLeft" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                    <TextBlock Text="Povratak" Style="{StaticResource menuButtonText}"></TextBlock>
                </StackPanel>
            </RadioButton>

            <TextBlock Foreground="White" x:Name="nazivTxtBl" FontSize="18" FontWeight="Bold"/>
            <!--<Image Foreground="White" x:Name="slikaTxtBl" Width="200" Height="200" Margin="0 10"/>-->
            <Label Content="Cijena:" Foreground="White"></Label>
            <TextBlock Foreground="White" x:Name="cijenaTxtBl" FontSize="16" FontWeight="Bold"/>
            <Label Content="Nutrivne informacije:" Foreground="White"></Label>
            <TextBlock Foreground="White" x:Name="nutrivne_informacijeTxtBl" Margin="0 10"/>
            <Label Content="Alergeni:" Foreground="White"></Label>
            <TextBlock Foreground="White" x:Name="alergeniTxtBl" Margin="0 10"/>
        </StackPanel>
    </Grid>
</UserControl>
